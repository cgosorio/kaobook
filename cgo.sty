\renewcommand{\hugequote}{%
    \makebox[0pt][c]{%
        \raisebox{3ex}{\includegraphics[width=30pt]{quotesBookman}}%
    }%
}

\newcommand{\cleanchapterquote}[2]{%
%    \begin{minipage}{.865\textwidth}%
    \begin{minipage}{.92\textwidth}%
        \begin{flushright}
%            \begin{minipage}{.65\textwidth}%
            \begin{minipage}{.8\textwidth}%
                \begin{flushleft}
                    {\hugequote}\textit{#1}
                \end{flushleft}%
                \vspace{-2em}
                \begin{flushright}
                    --- \textbf{#2} \\
                    %#3
                \end{flushright}
            \end{minipage}%
        \end{flushright}
    \end{minipage}%
    \bigskip
}

\newcommand{\marginquote}[3][-7mm]{%
    \marginnote[#1]{
        \begin{flushleft}
            \hugequote\textit{\larger #2}
        \end{flushleft}\vspace{-2.5em}
        \begin{flushright}
        \textbf{\larger --- #3}
        \end{flushright}
    }
}

% SEE: https://ctan.org/pkg/epigraph
\usepackage{epigraph} % \epigraph, \begin{epigraphs}, \qitem
\newcommand{\marginquotation}[3][0mm]{%
    \marginnote[#1]{%
        \epihugequote\epigraph{\textit{\larger #2}}%
                              {\textbf{\larger #3}}}
}
\renewcommand{\marginquotation}[3][0mm]{%
    \setlength{\epigraphrule}{0pt}
    \marginpar[#1]{%
        \epihugequote\epigraph{\textit{\larger #2}}%
    {\vskip.8mm\textbf{\larger --- #3}}}
}

